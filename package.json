{
  "name": "forum-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:forum": "bun run --cwd apps/forum dev",
    "dev:server": "bun run --cwd packages/api dev",
    "dev": "bun run --parallel dev:forum dev:server",
    "build": "bun run --cwd apps/forum build",
    "format": "bunx biome format --write .",
    "lint": "bunx biome lint .",
    "check": "bunx biome check --fix ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/bun": "^1.3.8",
    "typescript": "^5.9.3"
  }
}
