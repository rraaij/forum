{
  "name": "@forum/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "db:generate": "set -a && . ../../.env && set +a && drizzle-kit generate",
    "db:migrate": "set -a && . ../../.env && set +a && drizzle-kit migrate",
    "db:push": "set -a && . ../../.env && set +a && drizzle-kit push",
    "db:studio": "set -a && . ../../.env && set +a && drizzle-kit studio",
    "db:seed": "bun --bun --env-file ../../.env run scripts/seed.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@forum/config": "workspace:*",
    "drizzle-kit": "^0.31.0",
    "@types/bun": "^1.2.0"
  }
}
